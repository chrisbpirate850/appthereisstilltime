# Stripe API Key (Secret key from Stripe Dashboard)
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_API_KEY=YOUR_STRIPE_SECRET_KEY_HERE

# Stripe Webhook Secret (will be provided after deployment)
# Leave empty for now, we'll fill this in after deploying
STRIPE_WEBHOOK_SECRET=

# Products and pricing plans collection (default: products)
PRODUCTS_COLLECTION=products

# Customer details and subscriptions collection (default: customers)
CUSTOMERS_COLLECTION=customers

# Automatically delete Stripe customer object when user is deleted
DELETE_STRIPE_CUSTOMERS_ON_USER_DELETE=true

# Sync new users to Stripe customers (creates customer immediately on signup)
SYNC_USERS_ON_CREATE=true
